@model boilerplate.Models.LoginViewModel
<p>Log in! </p>
    <form class="w-100" asp-controller="Home" asp-action="login" method="post">
            <div class="form-group">
                <span asp-for="loginEmail"></span> <!--asp-for must match the model you are referencing to-->
                <input asp-for="loginEmail" class="form-control" placeholder="Email"/>
            </div>
            <div class="form-group">
                <span asp-for="loginPassword"></span>
                <input asp-for="loginPassword" type="password" class="form-control" placeholder="Password"/>
            </div>
            <div class="form-group">
                 <button type="submit" class="btn btn-default">Log in!</button>
            </div>
    </form>
    @{
        if(@ViewBag.fail != null)
        {
            @ViewBag.fail
        }
    }
    <p> Not a user? Register here!</p>
        <a href="/"><button class="btn btn-default">Register!</button></a>
  
    